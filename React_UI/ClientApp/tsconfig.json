{
  "compilerOptions": {
    

    "target": "es2016",                                 
    "lib": ["dom",
      "dom.iterable",
      "esnext"],                                       
     "jsx": "react-jsx",                                
    
    "module": "commonjs",                                
    "moduleResolution": "node",                      
    "resolveJsonModule": true,                        

     "allowJs": true,                                 
    "noEmit": true,                                   
 

    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

   
    "strict": true,                                     
    "noFallthroughCasesInSwitch": true, 
    "skipLibCheck": true                                 
  }
}
